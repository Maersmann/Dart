<Window x:Class="Dart.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ribbon="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
    Title="Schützenverein Wiemtarschen"
	x:Name="FormMain"
	Width="851.618" Height="550.539" WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <DockPanel x:Name="LayoutRoot">

        <ribbon:Ribbon x:Name="Ribbon" DockPanel.Dock="Top" VerticalAlignment="Top">
            <ribbon:RibbonTab Header="Haupt"  >
                <ribbon:RibbonGroup Header="RibbonGroup" Height="88" Margin="0" VerticalAlignment="Top">
                    <ribbon:RibbonButton x:Name="rbMatch" Label="Spiel" Height="18" VerticalAlignment="Top" Click="rbMatch_Click" />
                </ribbon:RibbonGroup>

            </ribbon:RibbonTab>

            <ribbon:Ribbon.ContextualTabGroups>
                <ribbon:RibbonContextualTabGroup Header="Ink Tools" Visibility="Visible" Background="Green" />
            </ribbon:Ribbon.ContextualTabGroups>
           
        </ribbon:Ribbon>
        <Frame x:Name="Container"  DockPanel.Dock="Bottom" NavigationUIVisibility="Hidden"/>




    </DockPanel>
</Window>