                    <ColumnDefinition Width="33*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="LblAnzahl60" Content="Anzahl 60 >=:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
